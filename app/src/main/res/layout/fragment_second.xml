<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:background="@drawable/main_background">

    <Button
        android:id="@+id/disableButton"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#647165"
        android:backgroundTintMode="multiply"
        android:text="Disable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:src="@drawable/sleep_1324760623079080083_0"
        app:layout_constraintBottom_toTopOf="@+id/disableButton"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.276"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="304dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/storytime"
        android:text="PhoneFreedom is ON!"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>